<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>

<% end %>
<%= link_to "Show" , book_path(@book.id) %>
<%= link_to "Back" , books_path %>

<div>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のerror
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
  <% end %>
</div>