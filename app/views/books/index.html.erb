<h1>Books</h1>
<table>
  <% @books.each do |book| %>
    <h3>Title</h3>
    <p><%= book.title %></p>
  
    <h3>Body</h3>
    <p><%= book.body %></p>
  
    <%= link_to "Show" , book_path(book.id) %>
    <%= link_to "Edit" , edit_book_path(book.id) %>
    <%= link_to "Destory" , books_path , method: :delete %>
  
  <% end %>
</table>

<div>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のerror
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
  <% end %>
</div>

<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>